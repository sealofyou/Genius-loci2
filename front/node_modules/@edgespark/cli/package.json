{
  "name": "@edgespark/cli",
  "version": "0.0.5",
  "description": "EdgeSpark CLI - Create and manage your EdgeSpark projects",
  "type": "module",
  "bin": {
    "edgespark": "./bin/edgespark.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build && npm run copy-templates",
    "postpublish": "rm -rf templates && ln -s ../templates templates",
    "copy-templates": "rm -rf templates && mkdir -p templates && rsync -aL --exclude='node_modules' --exclude='dist' --exclude='package-lock.json' ../templates/user-backend templates/",
    "link": "npm run build && npm link",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "edgespark",
    "cli",
    "scaffold",
    "backend",
    "hono",
    "drizzle"
  ],
  "author": "EdgeSpark",
  "license": "MIT",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "es-module-lexer": "^2.0.0",
    "esbuild": "^0.27.1",
    "fs-extra": "^11.3.2",
    "hono": "^4.11.1",
    "ora": "^9.0.0",
    "node-sql-parser": "^5.3.13"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
